@model TssCodingAssignment.Models.ProductModel

@{
    ViewBag.Title = "Catalog";
}

<h1>
    @Html.DisplayFor(model => model.Name)
</h1>

<section class="py-5">
    <div class="container px-4 px-lg-5 mt-5">
        <div id="product" class="row gx-2 gx-lg-5 row-cols-2 row-cols-md-2 row-cols-xl-4 justify-content-center">
            <div class="container px-4 px-5 mt-5">
                <div class="col mb-5">
                    <div class="card h-100">
                        <!-- Product image-->
                        <img class="card-img-top" src=@Url.Content(Model.ImageUrl) alt="..." />
                    </div>
                </div>
            </div>
            <dl class="container pt-xl-5 pt-xl-5 mt-5">
                <dt>
                    @Html.DisplayNameFor(model => model.Description)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Description)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Type)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Type)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Quantity)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Quantity)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Cost)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Cost)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.DateAdded)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.DateAdded)
                </dd>
            </dl>
        </div>
    </div>
</section>

