<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Code Interview Website</title>
    <meta name="description" content="Code Interview Website" />
    <meta name="author" content="Jacob Arsenault" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <!-- Favicon-->
    <link rel="icon" type="image/x-icon" href="favicon.ico" />
    <!-- Bootstrap icons-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />
    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="~/Content/styles.css" rel="stylesheet" />
</head>
<body>
    <!-- Navigation-->
    <nav class="navbar navbar-expand-lg navbar-light bg-dark">
        <div class="container ">
            <a class="navbar-brand text-white" @Html.ActionLink("TSS Coding Test", "Index", "Home")></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0 ms-lg-4">
                    <li class="nav-item"><a class="nav-link text-white" @Html.ActionLink("Home", "Index", "Home")></a></li>
                    <li class="nav-item"><a class="nav-link text-white" @Html.ActionLink("About", "About", "Home")></a></li>
                    <li class="nav-item"><a class="nav-link text-white" @Html.ActionLink("Login", "Index", "Login")></a></li>
                </ul>
                @{Html.BeginForm("Index", "Cart", FormMethod.Post);}

                <button class="btn btn-outline-light" type="submit">
                    <i class="bi-cart-fill me-1 text-white"></i>
                    Cart
                    <span id="cartCount" class="badge bg-dark text-white ms-1 rounded-pill">0</span>
                </button>
                @{Html.EndForm();}
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Jacob Arsenault's Website'</p>
        </footer>
    </div>

    <!-- Footer-->
    <footer class="py-5 bg-dark">
        <div class="container"><p class="m-0 text-center text-white">Copyright &copy; Jacob Arsenault 2021</p></div>
    </footer>
    <!-- Bootstrap core JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"></script>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

@if (null != Session["totalItems"])
{
    <script type="text/javascript">
        $(function () {
            $('#cartCount').html('@Session["totalItems"]');
        });
    </script>
}

